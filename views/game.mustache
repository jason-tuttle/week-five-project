<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>MYSTERY WORD :: PLAY!</title>
  </head>
  <body>
    <header>
      <div class="head left">
        <h1>MYSTERY WORD</h1>
      </div>
      <div class="head right">
        You have {{game.guessesLeft}} guesses left.
      </div>
    </header>
    <section class="game">
      <div class="game-word">
        <p>
        {{#game.guessWord}}
          {{.}}&nbsp;
        {{/game.guessWord}}
      </p>
      </div>
      <div class="game-form">
        <form class="game-form" action="/game" method="post">
          <label for="guess">Guess a Letter:</label>
          <input type="text" id="guess" name="guess" value="">
          <input type="submit" name="submit" value="Make A Guess">
        </form>
      </div>
      <div class="error-message">
        <span>{{error}}</span>
      </div>
      <div class="game-guesses">
        <p>Letters guessed: <span class="guessed">{{#game.guessed}}{{.}} {{/game.guessed}}</span></p>
      </div>
      {{#win}}
        <div class="win-message">
          <p>{{winLossMessage}}</p>
        </div>
      {{/win}}
      {{#lose}}
        <div class="lose-message">
          <p>{{winLossMessage}}</p>
        </div>
      {{/lose}}
    </section>
  </body>
</html>
